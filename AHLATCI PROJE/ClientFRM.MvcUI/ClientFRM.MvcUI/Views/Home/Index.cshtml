@{
    Layout = null;
}

@using ClientFRM.MvcUI.Models.ApiTypes
@model List<CategoryItem>

<html>
    <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    </head>

    <body>


        
            
        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.CategoryName</h5>
                        @*<p class="card-text">@item.CategoryDescription</p>*@
                        <a href="Article/ArticlePage" class="col-12  btn btn-primary">Konular</a>
                    </div>
                </div>
            </div>            
        }            
        </div>
    </body>
</html>