@{
    Layout = null;
}

@using ClientFRM.MvcUI.Models.ApiTypes
@model List<CategoryItem>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">

                <h4>Yeni Ürün Kayıt Formu</h4>
                <hr />
                <form class="row g-3" action="/Article/NewArticle" method="post">
                    <div class="col-md-12">
                        <label class="form-label">Konu Başlığı</label>
                        <input name="Subtitle" type="text" class="form-control">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">İçerik</label>
                        <input name="Text" type="text" class="form-control">
                    </div>
                    
                     <div class="col-md-12">
                        <label class="form-label">Kategorisi</label>
                        <select name="CategoryId" class="form-select">
                            <option value="-1">Seçiniz...</option>
                            @foreach (var item in Model)
                            {
                                <option value="@item.CategoryId">@item.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>

                <b>@Html.Raw(ViewBag.Message)</b>

            </div>
        </div>
    </div>
</body>
</html>